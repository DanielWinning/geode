#!/usr/bin/bash
snippets="/usr/local/bin/geode/scripts/snippets";

# Load helper functions and global variables
. "$snippets/functions.sh"

validateOperatingSystemOrExit

defineCommand help "help.sh" "Displays help information"
defineCommand server:setup "server/setup.sh" "Creates a new sudo user and runs initial server setup.\r\n\x1b[32mArguments: username\x1b[0m"
defineCommand nginx:install "nginx/install.sh" "Installs Nginx and sets up a new website.\r\n\x1b[32mArguments: domain_name email_address\x1b[0m"

isValidCommand "$1" || errorAndExit "Invalid command: $1"

runCommandWithArgs "$@"